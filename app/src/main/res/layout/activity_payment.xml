<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:alpha="0.6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="250dp">
        <TextView
            android:id="@+id/payment"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Payment"
            android:layout_marginTop="175dp"
            android:textSize="50sp"
            android:textStyle="bold"
            android:fontFamily="@font/hwls">

        </TextView>

        <!--<EditText
            android:id="@+id/money"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="175dp"
            android:layout_toRightOf="@+id/payment"
            android:gravity="center_vertical"
            android:hint="input your money"
            android:inputType="text"
            android:fontFamily="@font/arial"
            android:textColorHint="@color/layout_border" />-->


    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_payment_confirm"
            android:layout_width="200dp"
            android:fontFamily="@font/arial"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_bg"
            android:textAllCaps="false"
            android:text="Confirm Payment" />

        <Button
            android:id="@+id/btn_payment_back"
            android:layout_marginTop="40dp"
            android:layout_width="200dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:fontFamily="@font/arial"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_bg"
            android:text="Cancel Payment" />
    </LinearLayout>

</LinearLayout>